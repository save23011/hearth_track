# Environment Variables
NODE_ENV=development
PORT=3000

# Database
MONGODB_URI=mongodb://localhost:27017/hearth_track
MONGODB_TEST_URI=mongodb://localhost:27017/hearth_track_test

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRE=7d

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Social Login - Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Social Login - Facebook OAuth
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Firebase Admin SDK (for push notifications)
FIREBASE_ADMIN_SDK_KEY_PATH=./config/firebase-admin-sdk.json

# Cloudinary (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# AI Service Configuration
OPENAI_API_KEY=your_openai_api_key
AI_SERVICE_URL=http://localhost:5000

# App Configuration
APP_NAME=Hearth Track
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,mp3,mp4,wav

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
